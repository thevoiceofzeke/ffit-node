extends layout

block content
  if (user)
    p You are logged in as #{user.username}
      &nbsp; 
      a(href="/logout") Logout

  h1= title
  p Add new user
  form#createUser(method='POST' action='/api/users')
    label(for='username') Username
    &nbsp;
    input#username(placeholder='username' name='username')
    br
    label(for='password') Password
    &nbsp;
    input#password(placeholder='password' name='password')
    br
    button#addUserButton(type='submit') Add User
  br
  button(id='listUsers') Show Users
  div(class='result')