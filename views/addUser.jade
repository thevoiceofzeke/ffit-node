extends layout

block content
  a(href='/') Home
  
  if (user)
    p You are logged in as #{user.username}
      &nbsp; 
      a(href="/logout") Logout

  h1= title
  p Register new user (you will be logged in as the new user)
  form#createUser(method='POST' action='/api/users/registernoredirect')
    label(for='username') Username
    &nbsp;&nbsp;
    input#username(placeholder='username' name='username')
    br
    label(for='password') Password
    &nbsp;&nbsp;&nbsp;
    input#password(placeholder='password' name='password')
    br
    button#addUserButton(type='submit') Add User
  br
  button#listUsers Show Users
  &nbsp;
  button#listLeagues Show Leagues
  div.result